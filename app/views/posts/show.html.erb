<div class="page-header">
  <h1> <%= @post.title %><br>
  <small>Submitted by <%= @post.user.email %></small>
  </h1>
  <h2> <small> <%= @post.content %> <small> </h2>
</div>


<% if current_user == @post.user -%>
  <div class="btn-group">
   <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-default" %>
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to make a mistake like that?' }, class: "btn btn-default" %>
  </div>
<% end %>
  
